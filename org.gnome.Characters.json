{
    "app-id": "org.gnome.Characters",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.20",
    "branch": "stable",
    "sdk": "org.gnome.Sdk",
    "tags": [],
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* Needed for dconf to work */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "*.la", "*.a",
                "/share/dbus-1", "/share/doc", "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "gnome-desktop",
            "config-opts": ["--disable-debug-tools"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/3.20/gnome-desktop-3.20.1.tar.xz",
                    "sha256": "6eac7b2b1a9672685028b81d2b06cb45449f967e66dd41724bc4a9596941c140"
                }
            ]
        },
        {
            "name": "gnome-characters",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-characters/3.20/gnome-characters-3.20.1.tar.xz",
                    "sha256": "6891eed27a5b023200992540266a9216d081eef890d6d0836380dc3c0033857c"
                }
            ]
        }
    ]
}
