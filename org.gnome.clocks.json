{
    "app-id": "org.gnome.clocks",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.20",
    "branch": "stable",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-clocks",
    "tags": [],
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* Needs to talk to the network: */
        "--share=network",
        /* Needed to get geo-positioning */
        "--system-talk-name=org.freedesktop.GeoClue2",
        /* Needed for dconf to work */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala",
                "*.la", "*.a"],
    "modules": [
        {
            "name": "geocode-glib",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/geocode-glib/3.20/geocode-glib-3.20.1.tar.xz",
                    "sha256": "669fc832cabf8cc2f0fc4194a8fa464cdb9c03ebf9aca5353d7cf935ba8637a2"
                }
            ]
        },
        {
            "name": "libgweather",
            "build-options": {
                "env": {
                    "PKG_CONFIG_VAPIGEN_VAPIDIR": "/app/share/vala/vapi"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgweather/3.20/libgweather-3.20.0.tar.xz",
                    "sha256": "52629b8e9fcd979377f43a2223cf0e7096d3c3e940faa94021132ee0f879b8d6"
                }
            ]
        },
        {
            "name": "gnome-desktop",
            "config-opts": ["--disable-debug-tools"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/3.20/gnome-desktop-3.20.1.tar.xz",
                    "sha256": "6eac7b2b1a9672685028b81d2b06cb45449f967e66dd41724bc4a9596941c140"
                }
            ]
        },
        {
            "name": "gsound",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gsound/1.0/gsound-1.0.2.tar.xz",
                    "sha256": "bba8ff30eea815037e53bee727bbd5f0b6a2e74d452a7711b819a7c444e78e53"
                }
            ]
        },
        {
            "name": "gnome-clocks",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-clocks/3.20/gnome-clocks-3.20.0.tar.xz",
                    "sha256": "e7a6da2ba3778fcfd77a6734f960319035370b942a3358089b7e712055e1bb17"
                }
            ]
        }
    ]
}
