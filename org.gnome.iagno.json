{
    "app-id": "org.gnome.iagno",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "iagno",
    "rename-desktop-file": "iagno.desktop",
    "rename-appdata-file": "iagno.appdata.xml",
    "finish-args": ["--share=ipc", "--share=network", "--socket=x11", "--talk-name=ca.desrt.dconf"],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala",
                "*.la", "*.a"],
    "modules": [
        {
            "name": "autoconf-archive",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.acc.umu.se/mirror/gnu.org/gnu/autoconf-archive/autoconf-archive-2015.09.25.tar.xz",
                    "sha256": "7c0467a5dbd2340153bca5a477bd92fbc951d9ee3cbed92f16f6bf08ac0c350a"
                }
            ]
        },
        {
            "name": "iagno",
            "sources": [
                {
                    "type": "git",
                    "url": "git://git.gnome.org/iagno"
                }
            ]
        }
    ]
}
